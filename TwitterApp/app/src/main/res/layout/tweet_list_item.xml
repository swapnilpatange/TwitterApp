<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:id="@+id/divider"
          app:layout_constraintTop_toTopOf="parent"
          android:background="@color/grey"/>
    <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:roundAsCircle="true"
            android:layout_marginTop="10dp"
            android:id="@+id/profile_img"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:textStyle="bold"
              android:textColor="@color/colorPrimaryDark"
              app:layout_constraintTop_toTopOf="@+id/profile_img"
              android:id="@+id/name"
              android:textSize="@dimen/sp_15"
              android:maxLines="1"
              android:ellipsize="end"
              android:text="Abhishek Bachchan "
              app:layout_constraintLeft_toRightOf="@id/profile_img"/>
    <ImageView android:layout_width="16dp"
               android:layout_height="16dp"
               android:layout_marginLeft="5dp"
               app:layout_constraintLeft_toRightOf="@+id/name"
               app:layout_constraintTop_toTopOf="@+id/name"
               android:src="@drawable/ic_verified"
               android:visibility="visible"
               app:layout_constraintBottom_toBottomOf="@id/name"
               android:id="@+id/img_Verified"
    />
    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/username"
              android:layout_marginLeft="5dp"
              android:textSize="@dimen/sp_15"
              android:textColor="@color/warm_grey"
              android:ellipsize="end"
              app:layout_constraintTop_toTopOf="@+id/profile_img"
              app:layout_constraintBottom_toBottomOf="@+id/name"
              android:maxLines="1"
              app:layout_constraintLeft_toRightOf="@+id/img_Verified"
              android:text="//@junior"
              android:layout_marginRight="10dp"
              app:layout_constraintRight_toLeftOf="@id/time"
    />
    <TextView android:layout_width="30dp"
              android:layout_height="wrap_content"
              android:id="@+id/time"
              android:gravity="center_horizontal"
              android:ellipsize="end"
              android:textSize="@dimen/sp_15"
              android:maxLines="1"
              android:textColor="@color/warm_grey"
              app:layout_constraintTop_toTopOf="@+id/profile_img"
              app:layout_constraintBottom_toBottomOf="@+id/name"
              android:text="7h"
              android:layout_marginRight="10dp"
              app:layout_constraintRight_toRightOf="parent"/>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/tweet_text"
              app:layout_constraintLeft_toLeftOf="@+id/name"
              app:layout_constraintRight_toRightOf="@+id/time"
              android:layout_marginTop="5dp"
              android:lineSpacingExtra="5sp"
              android:textSize="@dimen/sp_16"
              android:textColor="@color/colorPrimaryDark"
              app:layout_constraintTop_toBottomOf="@+id/name"
              android:text="All the best @ImRaina on your retirement. Thank you. ðŸ™"/>

    <ImageView android:layout_width="16dp"
               android:layout_height="16dp"
               android:src="@drawable/ic_retweet"
               android:tint="@color/warm_grey"
               android:layout_marginTop="15dp"
               android:id="@+id/img_retweet"
               app:layout_constraintLeft_toLeftOf="@id/tweet_text"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tweet_text"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="120"
              android:id="@+id/txt_retweet"
              android:textColor="@color/warm_grey"
              android:textSize="@dimen/sp_14"
              android:layout_marginLeft="10dp"
              app:layout_constraintLeft_toRightOf="@+id/img_retweet"
              app:layout_constraintTop_toTopOf="@+id/img_retweet"
              app:layout_constraintBottom_toBottomOf="@+id/img_retweet"/>

    <ImageView android:layout_width="16dp"
               android:layout_height="16dp"
               android:src="@drawable/ic_love"
               android:id="@+id/img_love"
               android:tint="@color/warm_grey"
               android:layout_marginLeft="30dp"
               app:layout_constraintTop_toTopOf="@+id/img_retweet"
               app:layout_constraintBottom_toBottomOf="@+id/img_retweet"
               app:layout_constraintLeft_toRightOf="@+id/txt_retweet"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="120"
              android:id="@+id/txt_love"
              android:textColor="@color/warm_grey"
              android:textSize="@dimen/sp_14"
              android:layout_marginLeft="10dp"
              app:layout_constraintLeft_toRightOf="@+id/img_love"
              app:layout_constraintTop_toTopOf="@+id/img_retweet"
              app:layout_constraintBottom_toBottomOf="@+id/img_retweet"/>

</androidx.constraintlayout.widget.ConstraintLayout>